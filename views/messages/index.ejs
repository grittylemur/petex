<% include ../partials/header %>
<br>
<br>
<div class="container">  
    <div class="row">
        <div class="col-md-11">
            <h1>Messages</h1>
        </div>
        <div class="col-md-1">
            <a class="btn btn-primary" href="/messages/new">New Message</a>
        </div>
    </div> 
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive-lg">
                <table class="table table-striped table-hover refresh-container pull-down">
                    <thead class="hidden-xs">
                        <tr>
                            <td><a href="javascript:;"><strong>Status</strong></a></td>
                            <td width="15%"><a href="javascript:;"><strong>Date</strong></a></td>
                            <td><a href="javascript:;"><strong>From</strong></a></td>
                            <td><a href="javascript:;"><strong>Subject</strong></a></td>
                            <td><a href="javascript:;"><strong>Actions</strong></a></td>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% if (messages.length > 0 ) {
                            messages.forEach(message => { %>
                                <tr>
                                    <td><a title="Status" href="#">
                                        <% if(message.status === 'unread'){ %>
                                            <i class="fa fa-envelope"></i>
                                        <% } else { %>
                                            <i class="fa fa-envelope-open"></i>
                                        <% } %>
                                    </a></td>
                                    <td><a href="/messages/<%= message.id%>"><span><%= moment(message.dateSent, "YYYYMMDD").fromNow()%></span></a></td>
                                    <td><a href="/messages/<%= message.id%>"><span><%= message.senderUsername %></span></a></td>
                                    <td width="75%"><a href="/messages/<%= message.id%>"><span><%= message.subject %></span></a></td>
                                    <td><a title="Delete item" href="/messages/delete/<%= message.id %>"><i class="fa fa-trash"></i></a> <a title="Mark item" href="javascript:;"><i class="fa fa-flag"></i></a></td>
                                </tr>
                        <% })} %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>