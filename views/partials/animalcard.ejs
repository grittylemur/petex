

<div class="col-md-4">
<div class="card mb-4 box-shadow">
    <% if(pet.image) { %>
        <img class="card-img-top" 
        src="<%= pet.image %>" 
        alt="<%= pet.name %>" >
        <%} else { %>
        <img class="card-img-top" 
        src="/images/pending.jpg" 
        alt="<%= pet.name %>" >
        <% } %>
        <div class="card-body">
            <h5 class="card-title"><%=pet.name%></h5>
            <h6 class="card-title">Age: <%=pet.age%></h6>
          <p class="card-text"><%= pet.description ? pet.description.substring(0, 100) + "..." : "No description availible." %></p>
          <% 
            let tagArray = pet.tags ? pet.tags.split(",") : []
            tagArray.forEach(tag => { %>
              <a href="/pets?search=<%=tag.trim()%>" class="badge badge-pill badge-info"><%=tag.trim()%></a>
            <% })
            %>  
            
          <div class="d-flex justify-content-between align-items-center" style="margin-top: 20px;">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary">
                <a href="/pets/<%=pet.id%>">View</a>
              </button>
              <button type="button" class="btn btn-sm btn-outline-secondary">Save</button>
              <button type="button" class="btn btn-sm btn-outline-secondary">Message</button>
            </div>
            <small class="text-muted"><%= pet.createdAt ? moment(pet.createdAt).fromNow() : "No time availible." %></small>
          </div>
        </div>
      </div>
</div>