<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 style="text-align: center">Add a Pet</h2>
      <div style="width: 30%; margin: 0 auto;">
        <form action="/pets" method="POST">
          <div class="form-group">
            <input
              class="form-control"
              id="name"
              aria-describedby="emailHelp"
              placeholder="Pet Name"
              name="name"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              id="age"
              aria-describedby="emailHelp"
              placeholder="Pet Age"
              name="age"
            />
          </div>
          <button type="Create" class="btn btn-primary btn-lg btn-block">
            Submit
          </button>
        </form>
      </div>
    </div>
    <a style="margin: 10px auto;" href="/index">Go Back</a>
  </div>
</div>
